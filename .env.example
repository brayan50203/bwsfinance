# ========================================
# BWSFinance + WhatsApp Integration
# 100% Local & Free Configuration
# ========================================

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_PORT=5000
FLASK_HOST=0.0.0.0

# WhatsApp Server (Node.js)
WHATSAPP_SERVER_URL=http://localhost:3000
WHATSAPP_SERVER_PORT=3000
WHATSAPP_AUTH_TOKEN=sua_chave_secreta_aqui_change_me

# Database
DB_PATH=./bws_finance.db

# AI/ML Models (Local)
WHISPER_MODEL_PATH=./models/whisper-small
WHISPER_MODEL_SIZE=small
OCR_LANGUAGE=por
SPACY_MODEL=pt_core_news_sm

# Processing
TEMP_DIR=./temp
LOGS_DIR=./logs
MAX_FILE_SIZE_MB=25

# Security
ALLOWED_SENDERS=+5511999999999,+5511888888888
# Deixe vazio para permitir todos

# OpenAI GPT Integration (Inspirado no Pixzinho Bot)
# Obtenha sua chave em: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-api-key-here
# Deixe vazio para usar modo fallback (NLP básico)

# Auto-cleanup
DELETE_TEMP_FILES_AFTER_HOURS=24

# NLP Confidence Thresholds
MIN_CONFIDENCE_AMOUNT=0.7
MIN_CONFIDENCE_CATEGORY=0.6
MIN_CONFIDENCE_DATE=0.8

# Fallback Settings
USE_VOSK_IF_WHISPER_FAILS=true
CONFIRM_LOW_CONFIDENCE=true

# =====================================================
# SISTEMA DE NOTIFICAÇÕES AUTOMÁTICAS
# =====================================================

# Auto Notifications (Scheduler)
AUTO_NOTIFICATIONS_ENABLED=true

# WhatsApp Settings (já existentes acima, mas repetindo para referência)
WHATSAPP_ENABLED=true
# WHATSAPP_SERVER_URL já definido acima
# WHATSAPP_AUTH_TOKEN já definido acima
WHATSAPP_SESSION_NAME=bws-finance
WHATSAPP_MAX_RETRIES=3
WHATSAPP_TIMEOUT=30

# SMTP Email (para notificações por email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASSWORD=sua_senha_de_app_aqui
SMTP_FROM=noreply@bwsfinance.com
FROM_EMAIL=noreply@bwsfinance.com

# Notificações - Valores padrão
NOTIFY_DEFAULT_LOW_BALANCE=100.00
NOTIFY_INVEST_PCT=3.0
